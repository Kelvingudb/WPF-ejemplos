<Window x:Class="WPF_DesignerControlsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DesignerControlsExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" ShowGridLines="True" Width="448" Height="179">


        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,-54,0,0" Grid.RowSpan="4">
            <TextBlock Text="Seleccione sus preferencias:" FontWeight="Bold" Margin="5"/>

            <CheckBox Content="Recibir boletines informativos" Margin="5"/>
            <CheckBox Content="Notificaciones de promociones" Margin="5"/>
            <CheckBox Content="Actualizaciones de software" Margin="5"/>

            <Button Content="Guardar Preferencias" Width="150" Margin="10"/>
        </StackPanel>
    </Grid>



</Window>
